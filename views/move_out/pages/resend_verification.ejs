<%- include("./../partials/header.ejs") %>

<body class="slide-in">
    <div class="verification-container">
        <h1 class="verification-title">User Already Registered but Not Verified</h1>
        <p class="verification-message">Please check your email for the verification code.</p>
        <p class="verification-instruction">If you haven't received the email, click the button below to resend it.</p>

        <form action="/move_out/resend-verification" method="POST" class="resend-form">
            <input type="hidden" name="email" value="<%= email %>">
            <button type="submit" class="btn btn-primary">Resend Verification Email</button>
        </form>
    </div>
</body>

