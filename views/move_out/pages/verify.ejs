<%- include("./../partials/header.ejs") %>

<body class="slide-in">
    <div class="verification-container">
        <h2 class="verification-title">Verify Your Email</h2>
        <p class="verification-message">Please enter the 8-digit code sent to your email:</p>

        <form action="/move_out/verify" method="POST" class="verification-form">
            <div class="form-group">
                <label for="verificationCode">Verification Code:</label>
                <input type="text" name="verificationCode" id="verificationCode" required pattern="\d{8}" maxlength="8" class="form-input">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Verify</button>
            </div>
        </form>
    </div>

    <style>
        .verification-container {
            text-align: center;
            margin-top: 100px; 
            color: white;
            background-color: rgba(0, 0, 0, 0.7); 
            padding: 20px;
            border-radius: 10px;
        }
        .verification-title {
            font-size: 36px;
            margin-bottom: 20px;
        }
        .verification-message {
            font-size: 20px;
            margin-bottom: 20px;
        }
        .form-input {
            width: 100%;
            padding: 10px; 
            margin-top: 10px; 
            border-radius: 5px;
            border: none; 
            background-color: #fff; 
            color: #000; 
        }
    </style>
</body>

<%- include("./../partials/footer.ejs") %>
