<%- include("./../partials/header.ejs") %>

<body>
    <div class="auth-container">
        <h2>Enter PIN</h2>
        <p>Please enter the 6-digit PIN to access this box.</p>

        <% if (error) { %>
            <div class="error-message">
                <p><%= error %></p>
            </div>
        <% } %>

        <form action="/move_out/verify-pin/<%= box_id %>" method="POST">
            <div class="form-group">
                <input type="text" name="pin" placeholder="Enter 6-digit PIN" required maxlength="6">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
<%- include("./../partials/footer.ejs") %>
</body>
