<%- include("./../partials/header.ejs") %>

<div class="marketing-email-body">
    <div class="marketing-email-container">
        <h2 class="marketing-email-title">Send Marketing Email</h2>
        <form action="/move_out/admin/send-marketing-email" method="POST" class="marketing-email-form">
            <div class="form-group">
                <label for="subject" class="marketing-label">Subject:</label>
                <input type="text" id="subject" name="subject" class="marketing-input" required>
            </div>
            <div class="form-group">
                <label for="content" class="marketing-label">Content:</label>
                <textarea id="content" name="content" rows="10" class="marketing-textarea" required></textarea>
            </div>
            <button type="submit" class="btn marketing-btn-primary">Send Email</button>
        </form>
    </div>
</div>

